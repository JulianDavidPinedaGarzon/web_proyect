<h1>Posts</h1>
<% @posts.each do |post| %>
  <div class="card mb-3">
    <div class="card-body">
      <h2 class="card-title"><%= link_to "Post", post_path(post) %></h2>
      <p class="card-text">Description: <%= post.description %></p>
       <p class = "card-text"> Posted by: <%= link_to post.user.username, user_path(post.user) %> </p>
    </div>
  </div>
<% end %>