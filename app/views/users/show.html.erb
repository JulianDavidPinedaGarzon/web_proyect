<h1><%= @user.username %></h1>
<p>Email: <%= @user.email %></p>
<p>Bio: <%= @user.bio %></p>
<h2>Posts:</h2>
 <% @user.posts.each do |post| %>
   <div class = "card mb-3">
    <div class = "card-body">
     <h3 class="card-title"><%= link_to "Post", post_path(post) %></h3>
     <p class = "card-text"> Description: <%= post.description %></p>
    </div>
   </div>
 <% end %>

 <h2>Comments:</h2>
  <% @user.comments.each do |comment| %>
    <div class = "card mb-3">
     <div class = "card-body">
      <p class = "card-text"> <%= comment.content %> </p>
     </div>
    </div>
  <% end %>
